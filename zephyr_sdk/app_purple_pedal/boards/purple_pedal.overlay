#include <zephyr/dt-bindings/adc/ad7124-adc.h>
/ {
	hid_dev_0: hid_dev_0 {
		compatible = "zephyr,hid-device";
		label = "PurplePedal";
		protocol-code = "none";
		in-report-size = <64>;
		in-polling-period-us = <1000>;
	};

	aliases {
		pedal-adc = &adc_ad7124;
	};
};

