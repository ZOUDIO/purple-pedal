&adc_ad7124 {
	#address-cells = <1>;
	#size-cells = <0>;
	spi-max-frequency = <1000000>;
    //pin definitions in zephyr/dt-bindings/adc/ad7124-adc.h
    //matches datasheet table 74: https://www.analog.com/media/en/technical-documentation/data-sheets/AD7124-4.pdf
	adc-mode = <0>;	//continuous mode
	power-mode = <2>;//high power mode
	refbuf-enable-mask=<7>;
	bipolar-mask=<7>; //bipolar mode allows input range 0~AVdd
	filter-type-mask=<7>;
	inbuf-enable-mask=<7>;
	channel@0 {
		reg = <0>;
		zephyr,gain = "ADC_GAIN_128";
		zephyr,reference = "ADC_REF_EXTERNAL0"; //ADC_REF_VDD_1 is also OK
		zephyr,acquisition-time = <ADC_ACQ_TIME(ADC_ACQ_TIME_TICKS, 1500)>;
		//zephyr,resolution=<16>;
		zephyr,differential;
		zephyr,input-positive = <AD7124_ADC_AIN1>; 
        zephyr,input-negative = <AD7124_ADC_AIN0>;
	};
	channel@1 {
		reg = <1>;
		zephyr,gain = "ADC_GAIN_128";
		zephyr,reference = "ADC_REF_EXTERNAL0";
		//zephyr,resolution=<16>;
		zephyr,acquisition-time = <ADC_ACQ_TIME(ADC_ACQ_TIME_TICKS, 1500)>;
		zephyr,differential;
		zephyr,input-positive = <AD7124_ADC_AIN3>; 
        zephyr,input-negative = <AD7124_ADC_AIN2>;
	};
    channel@2 {
		reg = <2>;
		zephyr,gain = "ADC_GAIN_128";
		zephyr,reference = "ADC_REF_EXTERNAL0";
		//zephyr,resolution=<16>;
		zephyr,acquisition-time = <ADC_ACQ_TIME(ADC_ACQ_TIME_TICKS, 1500)>;
		zephyr,differential;
		zephyr,input-positive = <AD7124_ADC_AIN5>; 
        zephyr,input-negative = <AD7124_ADC_AIN4>;
	};
};